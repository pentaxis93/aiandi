---
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE, SITE_META } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

const totalPosts = posts.length;
---

<!doctype html>
<html lang="en" class="min-h-screen">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="min-h-screen flex flex-col bg-background text-text-primary font-body antialiased relative">
		<!-- Visible grid structure -->
		<div class="fixed inset-0 pointer-events-none" style="opacity: var(--theme-grid-opacity, 0.04); background-image: linear-gradient(var(--color-border) 1px, transparent 1px), linear-gradient(90deg, var(--color-border) 1px, transparent 1px); background-size: 32px 32px;"></div>
		
		<Header />
		
		<main class="flex-1 w-full relative z-10 px-6">
			<!-- Hero Section - Asymmetric, pushed left -->
			<section class="max-w-6xl mx-auto py-16 md:py-24 grid md:grid-cols-12 gap-8">
				<!-- Main content - left 8 columns -->
				<div class="md:col-span-8 border-l-4 border-accent pl-8">
					<h1 class="font-heading text-4xl md:text-6xl leading-[1.1] mb-8 tracking-[-0.02em]">
						{SITE_TITLE.toUpperCase()}
					</h1>
					<p class="text-base md:text-lg leading-[1.8] text-text-secondary max-w-[58ch] mb-8">
						{SITE_DESCRIPTION}
					</p>
					<div class="font-mono text-xs text-text-muted border-t border-border pt-4 mt-8">
						{totalPosts} posts // Est. {SITE_META.established}
					</div>
				</div>
				
				<!-- Metadata sidebar - right 4 columns -->
				<aside class="md:col-span-4 border-2 border-border border-l-4 border-l-accent bg-surface p-6 font-mono text-xs space-y-4">
					<div>
						<div class="text-text-muted uppercase mb-1 tracking-wider">Status</div>
						<div class="text-accent font-bold">{SITE_META.status}</div>
					</div>
					<div>
						<div class="text-text-muted uppercase mb-1 tracking-wider">Posts</div>
						<div class="text-text-primary font-bold">{totalPosts}</div>
					</div>
					<div class="border-t border-border pt-4 mt-4">
						<div class="text-text-muted leading-relaxed">{SITE_META.tagline}</div>
					</div>
				</aside>
			</section>

			<!-- Posts -->
			<section class="max-w-6xl mx-auto mb-16 space-y-8">
				{posts.map((post, index) => (
					<article class="group border-2 border-border bg-surface hover:border-accent transition-colors duration-normal">
						<a 
							href={`/blog/${post.id}/`}
							class="block"
						>
							<!-- Post header -->
							<div class="border-b-2 border-border bg-surface-alt px-8 py-4 font-mono text-xs">
								<div class="flex items-baseline justify-between gap-4">
									<time 
										datetime={post.data.pubDate.toISOString()}
										class="text-text-primary uppercase tracking-wide font-bold"
									>
										<FormattedDate date={post.data.pubDate} />
									</time>
									{index === 0 && <span class="text-accent">Latest</span>}
								</div>
							</div>
							
							<!-- Post content -->
							<div class="p-8 md:p-12">
								<h3 class="font-heading text-2xl md:text-4xl font-bold leading-[1.3] mb-6 group-hover:text-accent transition-colors duration-normal tracking-tight">
									{post.data.title}
								</h3>
								<p class="text-base md:text-lg leading-[1.8] text-text-secondary border-l-2 border-border pl-6">
									{post.data.description}
								</p>
							</div>
							
							<!-- Post footer -->
							<div class="border-t border-border px-8 py-4 font-mono text-xs text-text-muted bg-surface-alt">
								<span class="text-accent">â†’ Read</span>
							</div>
						</a>
					</article>
				))}
			</section>
		</main>
		
		<Footer />
	</body>
</html>
